<!DOCTYPE html>
<html>
  <head>
    <title>LW12</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <% if current_user %>
    <div> User <%= current_user.email %></div>
    <div><%= button_to "Log out", destroy_user_session_path, method: :delete, data: { turbo: false } %></div>
    <div><%= button_to "See all users", user_list_all_path, method: :get, data: { turbo: false } %></div>
    <div><%= button_to "Edit profile",  '/users/edit/', method: :get, data: { turbo: false } %></div>
    <div><%= button_to "Show profile", user_list_you_path, method: :get, data: { turbo: false } %></div>
  <% else %>
  
  <% end %>
  <%= yield %>
  </body>
</html>
